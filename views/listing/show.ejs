<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%=listing.title%>
                </h3>
            </div>

            <div class="card col-6 offset-3 mt-3 mb-2">
                <img src="<%=listing.image%>" class=" card-img-top show-img" alt="listing image">

                <div class="card-body">

                    <p class="card-text">
                        <b>
                            <%=listing.title%>
                        </b><br>
                        <%=listing.description%> <br>

                            &#8377;<%=listing.price.toLocaleString("en-IN")%> <br>

                                <%=listing.location%> <br>


                                    <%=listing.country%> <br>

                    </p>

                </div>
            </div>
            <div class="col-1 offset-3 mb-3">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-danger">Edit</a>
            </div>
            <div class="col-1 mb-3">

                <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
            <hr>
            





            <div class="col-8 offset-3">
                <h4>Leave a review</h4>  
                <form class="mb-3" action="/listings/<%=listing._id%>/reviews" method="POST">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type ="range" class="form-range" name="review[rating]" id="rating" min = "1" max = "5" >
                    </div>

                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="30" row = "5" class="form-control"></textarea>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                   
                </form>

            </div>


        </div>

        
    